<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/mainall_padding_bottom"
    android:background="@mipmap/my_special_like_bg"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_19_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp15"
        android:textColor="@color/text_black_333"
        android:text="每天5个超级喜欢" />
    <ImageView
        android:layout_width="230dp"
        android:layout_height="@dimen/dp300"
        android:src="@mipmap/my_prerogative_superlike"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp15"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13_text_size"
        android:textColor="@color/text_black_333"
        android:layout_gravity="center_horizontal"
        android:text="配对率提高5倍以上"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12_text_size"
        android:textColor="@color/text_black_999"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:text="帮你突出并置顶，记得留给最喜欢的人哦。获取会员每天5个"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp10"
        android:src="@mipmap/my_prerogative_point_three"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp30"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tvGetVip"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/red_my_button"
        android:text="￥9.9获取VIP会员"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/dp15"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        />

</LinearLayout>
