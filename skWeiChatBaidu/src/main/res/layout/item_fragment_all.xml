<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_main"
        android:padding="10dp"

        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_normal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:riv_border_color="#fff"
            app:riv_border_width="1dip"
            app:riv_corner_radius="6dp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/avatar_img"
            android:text="我的探探"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_15_text_size" />

        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/te1"
            android:layout_alignBottom="@+id/te1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="10分钟"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_15_text_size" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/te1"
            android:layout_alignLeft="@+id/te1"
            android:layout_marginTop="5dp"
            android:ellipsize="end"

            android:lines="1"

            android:maxLines="1"
            android:text="妹子们正焦急等待你妹子妹子妹子们正焦急等待你妹子妹子们正焦急等待你的回应呢们正焦急等待你的回应呢的回应呢们正焦急等待你的回应呢们正焦急等待你的回应呢的回应呢!"
            android:textColor="@color/text_black_999"
            android:textSize="@dimen/sp_12_text_size" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignTop="@+id/tv_message"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_red_dot"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>
