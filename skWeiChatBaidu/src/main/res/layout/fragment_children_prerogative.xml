<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/my_privilege_vip_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_19_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp15"
        android:textColor="@color/text_black_333"
        android:text="会员身份标识" />
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="@dimen/dp300"
        android:orientation="vertical"
        android:background="@drawable/bg_new_my_shadowpure_white"
        android:layout_marginLeft="@dimen/dp80"
        android:layout_marginRight="@dimen/dp80"
        android:layout_marginTop="@dimen/dp15"
        android:elevation="@dimen/dp5"
        >


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivHead"
            android:layout_width="220dp"
            android:layout_height="193dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head"
            android:visibility="visible"
            app:riv_border_color="#fff"
            app:riv_border_width="1dip"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp15"
            android:layout_gravity="center_horizontal"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp30"
            >
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15_text_size"
                android:textColor="@color/text_black_fd9e14"
                android:text="Eblist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="@dimen/sp_10_text_size"
                android:textColor="@color/white"
                android:background="@drawable/bg_new_my_vip_yellow"
                android:layout_toRightOf="@+id/tvUserName"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:paddingRight="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:text="Vip"/>
            <Button
                android:id="@+id/btEmpt"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp20"
            android:text="          "
            android:layout_below="@+id/tvUserName"
                android:layout_marginTop="@dimen/dp10"
                android:background="#E8E8E8"
            />
            <Button
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp20"
                android:text="          "
                android:layout_below="@+id/tvUserName"
                android:layout_toRightOf="@+id/btEmpt"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp5"
                android:background="#E8E8E8"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13_text_size"
        android:textColor="@color/text_black_333"
        android:layout_gravity="center_horizontal"
        android:text="让你的卡片更受欢迎，配对更容易！"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12_text_size"
        android:textColor="@color/text_black_999"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:text="香槟金昵称、卡片角标、会员专属标签、多重维度彰显身份"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp10"
        android:src="@mipmap/my_prerogative_point_one"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp30"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tvPayVip"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/red_my_button"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp15"
        android:text="￥9.9获取VIP会员"
        android:textColor="@color/white" />

</LinearLayout>
