<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/com_bg"
    android:orientation="vertical">
    <include layout="@layout/a_view_actionbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现："
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/sp_14_text_size"
                />
            <EditText
                android:id="@+id/tixianmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/app_black"
                android:textSize="@dimen/sp_14_text_size"
                android:hint="请输入金额"
                android:textColorHint="@color/text_black_999"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp15"
            android:paddingBottom="@dimen/dp20"
            >
            <TextView
                android:id="@+id/tv_poundage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="手续费：按照0.03%收取"
                android:textColor="@color/text_black_999"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp15"
            >
            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/pay_zfb"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/tv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/sp_17_text_size"
                android:layout_toRightOf="@+id/iv_zfb"
                android:layout_marginLeft="@dimen/dp5"
                />
            <LinearLayout
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp15"
                android:background="@drawable/appdes_shape_fc687c_2"
                android:layout_toRightOf="@+id/tv_zfb"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10_text_size"
                     android:paddingLeft="@dimen/dp5"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_zfb_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp15"
                android:src="@mipmap/pay_check" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp15"
            >
            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/pay_wx"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/sp_17_text_size"
                android:layout_toRightOf="@+id/iv_wx"
                android:layout_marginLeft="@dimen/dp5"
                />
            <ImageView
                android:id="@+id/iv_wx_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pay_checked"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp15"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@drawable/appdes_shape_fc687c_2"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        >
        <TextView
            android:id="@+id/tv_sumbit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认提现"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15_text_size"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            />

    </LinearLayout>


</LinearLayout>