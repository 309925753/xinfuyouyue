<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FEF7F8"

    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <com.xfyyim.cn.customer.StackLayout
        android:id="@+id/stack_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="380dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />
    <RelativeLayout
        android:id="@+id/rl_Show"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请去设置中心修改位置范围"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_15_text_size"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_fuction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llRegretsUnLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_white"
                android:scaleType="center"
                android:src="@drawable/home_1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUnLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_white"
                android:scaleType="center"
                android:src="@drawable/home_2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_superLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_whiteq"
                android:scaleType="center"
                android:src="@drawable/home_3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUserLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_white"
                android:scaleType="center"
                android:src="@drawable/home_4"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSuperLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_white"
                android:scaleType="center"
                android:src="@drawable/home_5" />
            <TextView
                android:id="@+id/tv_like_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12"
                android:layout_marginTop="-20dp"
                android:textColor="@color/text_fc6e7a"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
