<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7F8"
    android:orientation="vertical"
    >
    <include layout="@layout/a_view_actionbar" />
    <RelativeLayout
        android:id="@+id/RlMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        >
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />
        <TextView
            android:id="@+id/tvUserMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86 148****3391"
            android:textColor="@color/text_black_999"
            android:textSize="10sp"
            android:layout_below="@+id/tvMobile"
            android:layout_marginTop="@dimen/dp5"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/my_set_return"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        >
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置/修改密码"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />
        <TextView
            android:id="@+id/tvUserPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:textColor="@color/text_black_999"
            android:textSize="10sp"
            android:layout_below="@+id/tvPassword"
            android:layout_marginTop="@dimen/dp5"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/my_set_return"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销账号"
            android:textColor="@color/text_black_333"
            android:textSize="12sp"
            android:layout_below="@+id/tvUserPassword"
            android:layout_marginTop="@dimen/dp20"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View style="@style/View_Line"
        android:layout_margin="@dimen/dp15"
        android:background="#FFE5E7"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/rlManageRenewal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        >
        <TextView
            android:id="@+id/tvManageRenewal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理自动续费"
            android:visibility="gone"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/my_set_return"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            />
    </RelativeLayout>


</LinearLayout>
