<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new_my_pure_white"
    >
    <LinearLayout
        android:id="@+id/llMyprivleg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:elevation="5dp"
        android:layout_marginLeft="@dimen/dp80"
        android:layout_marginTop="@dimen/dp40"
        android:background="@drawable/bg_new_my_shadowpure_white"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_prerogative_comheat"
             android:layout_marginTop="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12_text_size"
            android:textColor="#35DB65"
            android:text="每天5个超级喜欢"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginRight="@dimen/dp10"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/IvmyPrerogativeComregrets"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:src="@mipmap/my_prerogative_comregrets"
        android:layout_below="@+id/llMyprivleg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        />
    <ImageView
        android:id="@+id/IvMyprerogativeComcity"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@mipmap/my_prerogative_comcity"
        android:layout_below="@+id/IvmyPrerogativeComregrets"
        android:layout_marginLeft="@dimen/dp80"
        />
    <ImageView
        android:id="@+id/IvMyUser"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_below="@+id/llMyprivleg"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="@dimen/dp20"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/IvMyPrerogativeCom"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:src="@mipmap/my_prerogative_com"
        android:layout_below="@+id/IvMyUser"
        android:layout_marginLeft="@dimen/dp80"
        android:layout_marginTop="-30dp"
        />

    <RelativeLayout
        android:id="@+id/rlMyUser"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_below="@+id/IvMyUser"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="@dimen/dp30"
        android:background="@drawable/bg_new_my_shadowpure_white"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/IvMyPrerogativeComLike"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@mipmap/my_prerogative_comlike"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/IvMyPrerogativeComLike"
            android:text="无限右滑"
            android:textColor="#F95369"
            android:textSize="@dimen/sp_12_text_size" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="将放弃成为VIP将无法拥有5大特\n
             权，确定放弃吗？"
        android:textColor="@color/fen_tian_lan"
        android:textSize="@dimen/sp_15_text_size"
        android:layout_marginLeft="@dimen/dp80"
        android:layout_below="@+id/rlMyUser"
        android:layout_marginTop="@dimen/dp70"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvForget"
        >
        <TextView
            android:id="@+id/tvBuyVip"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/red_my_button"
            android:text="立即成为VIP会员"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/dp15"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp80"
            />
        <TextView
            android:id="@+id/tvGiveUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我放弃了"
            android:textColor="@color/text_black_999"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvBuyVip"
            android:layout_marginTop="@dimen/dp15"
            />

    </RelativeLayout>

</RelativeLayout>