<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7F8"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    >
    <include layout="@layout/a_view_actionbar" />

    <RelativeLayout
        android:id="@+id/rlGetMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp30"
        android:layout_below="@+id/mergerStatus"
        >
        <TextView
            android:id="@+id/tvGetMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86 148****3391"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_18_text_size"
            />
        <TextView
            android:id="@+id/tvGetVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_fcb38f_3_my"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp15"
            android:paddingRight="@dimen/dp5"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"

            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlGetMobile"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp15"
            android:hint="请输入4位验证码"
            android:textColorHint="@color/text_black_999"
            android:textColor="@color/text_black_333"
            android:shadowColor="#FC697B"
            android:background="@null"
            />
        <View style="@style/View_Line"
            android:id="@+id/vLine"
            android:layout_below="@+id/etPassword"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="#FFE5E7"
            android:layout_height="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPassword"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp20"
        >

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:hint="请设置新密码"
            android:textColorHint="@color/text_black_999"
            android:textColor="@color/text_black_333"
            android:shadowColor="#FC697B"
            android:background="@null"
            />
        <View style="@style/View_Line"
            android:layout_below="@+id/etPassword"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="#FFE5E7"
            android:layout_height="1dp"
            />
    </LinearLayout>




    <RelativeLayout
        android:id="@+id/rlFinish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/bg_new_my_wallet_red"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFCFC"
            android:textSize="@dimen/sp_15_text_size"
            android:background="@drawable/bg_new_my_wallet_red"
            android:text="完成"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"
            />

    </RelativeLayout>

</RelativeLayout>
