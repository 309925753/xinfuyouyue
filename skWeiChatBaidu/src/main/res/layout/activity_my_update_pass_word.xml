<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_main"
       >
    <include layout="@layout/a_view_actionbar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottpom"
            android:layout_below="@+id/mergerStatus"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.xfyyim.cn.view.ClearEditText
                    android:id="@+id/Cetpassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/digits_password"
                    android:hint="输入旧密码"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    android:textColor="@color/text_black_333"
                    android:textColorHint="@color/text_black_999"
                    android:textSize="@dimen/sp_18_text_size" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/main_color_red1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.xfyyim.cn.view.ClearEditText
                    android:id="@+id/cetNewPasswrod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/digits_password"
                    android:hint="输入新密码"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    android:textColor="@color/text_black_333"
                    android:textColorHint="@color/text_black_999"
                    android:textSize="@dimen/sp_18_text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/main_color_red1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.xfyyim.cn.view.ClearEditText
                    android:id="@+id/cetPaword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/digits_password"
                    android:hint="确认新密码"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    android:textColor="@color/text_black_333"
                    android:textColorHint="@color/text_black_999"
                    android:textSize="@dimen/sp_18_text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/main_color_red1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottpom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/shape_btn_red"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>