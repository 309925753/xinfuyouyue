<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new_my_pure_white"
    >

    <ImageView
        android:id="@+id/IvMyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_prerogative_head"
        android:layout_below="@+id/llMyprivleg"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="@dimen/dp20"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:id="@+id/rlMyUser"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_below="@+id/IvMyUser"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="@dimen/dp30"
        android:background="@drawable/bg_new_my_shadowpure_white"
        android:elevation="5dp"/>
    <TextView
        android:id="@+id/tvForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="附近有99+美女喜欢你！\n
            确定拒绝？"
        android:textColor="@color/fen_tian_lan"
        android:textSize="@dimen/sp_15_text_size"
        android:layout_marginLeft="@dimen/dp80"
        android:layout_below="@+id/rlMyUser"
        android:layout_marginTop="@dimen/dp70"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvForget"
        >
        <TextView
            android:id="@+id/tvBuyVip"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/red_my_button"
            android:text="立即配对喜欢我的人"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/dp15"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp80"
            />
        <TextView
            android:id="@+id/tvGiveUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我放弃了"
            android:textColor="@color/text_black_999"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvBuyVip"
            android:layout_marginTop="@dimen/dp15"
            />

    </RelativeLayout>

</RelativeLayout>