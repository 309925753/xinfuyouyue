<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp15"
    >
    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定支付宝"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_14_text_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp25"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/et_user_mobile"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_14_text_size"
            android:background="@drawable/edit_text_bg_radius6"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="36dp"
            android:paddingLeft="@dimen/dp5"
            android:hint="请输入真实手机号码"
            android:textColorHint="@color/text_black_999"
            android:inputType="number"

            />
        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_14_text_size"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg_radius6"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp5"
            android:hint="请输入真实姓名"
            android:textColorHint="@color/text_black_999"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvPayVip"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/red_my_button"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp15"
        android:layout_gravity="center_horizontal"

        android:text="确定"
        android:textColor="@color/white" />



</LinearLayout>