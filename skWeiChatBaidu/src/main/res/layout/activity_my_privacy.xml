<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7F8"
    android:orientation="vertical"
   >
    <include layout="@layout/a_view_actionbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_15_text_size"
        android:layout_marginTop="@dimen/sp_15_text_size"
        android:text="向我显示"
        android:textColor="#FC697B"
        android:visibility="gone"
        android:textSize="@dimen/sp_10_text_size" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp15"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tvPrivacyContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽手机联系人"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在探探中屏蔽你的手机通讯录好友"
            android:textColor="@color/text_black_999"
            android:textSize="@dimen/sp_10_text_size"
            android:layout_below="@+id/tvPrivacyContacts"
            android:layout_marginTop="@dimen/dp5"
            />
        <com.xfyyim.cn.view.SwitchButton
            android:id="@+id/sbPrivacyContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            app:sb_background="@color/app_white"
            app:sb_checked_color="@color/main_color_red"
            app:sb_effect_duration="100"
            app:sb_shadow_radius="4dp"
            app:sb_show_indicator="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp15"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tvComContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共同联系人"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示共同手机联系人"
            android:textColor="@color/text_black_999"
            android:textSize="@dimen/sp_10_text_size"
            android:layout_below="@+id/tvComContacts"
            android:layout_marginTop="@dimen/dp5"
            />
        <com.xfyyim.cn.view.SwitchButton
            android:id="@+id/sbComContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            app:sb_background="@color/app_white"
            app:sb_checked_color="@color/main_color_red"
            app:sb_effect_duration="100"
            app:sb_shadow_radius="4dp"
            app:sb_show_indicator="false" />
    </RelativeLayout>

    <View
        style="@style/View_Line"
        android:layout_height="3dp"
        android:visibility="gone"
        android:layout_margin="@dimen/dp15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_15_text_size"
        android:layout_marginTop="@dimen/sp_15_text_size"
        android:text="我的相册"
        android:textColor="#FC697B"
        android:textSize="@dimen/sp_10_text_size" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp15"
        >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tvNotAllowComAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不让未配对的人看我的相册"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />

        <com.xfyyim.cn.view.SwitchButton
            android:id="@+id/sbNotAllowComAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            app:sb_background="@color/app_white"
            app:sb_checked_color="@color/main_color_red"
            app:sb_effect_duration="100"
            app:sb_shadow_radius="4dp"
            app:sb_show_indicator="false" />
    </RelativeLayout>
    <View style="@style/View_Line"
        android:layout_margin="@dimen/dp15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_15_text_size"
        android:layout_marginTop="@dimen/sp_15_text_size"
        android:text="朋友圈"
        android:textColor="#FC697B"
        android:textSize="@dimen/sp_10_text_size" />
    <RelativeLayout
        android:id="@+id/rlUserBlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp15"
        >
        <TextView
            android:id="@+id/tvUserBlocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="已屏蔽用户"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/sp_12_text_size"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_set_return"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            />
    </RelativeLayout>



</LinearLayout>
