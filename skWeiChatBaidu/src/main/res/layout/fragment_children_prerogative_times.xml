<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/my_prerogative_likebg"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_19_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp15"
        android:textColor="@color/text_black_333"
        android:text="无限喜欢次数" />
    <ImageView
        android:layout_width="256dp"
        android:layout_height="@dimen/dp300"
        android:src="@mipmap/my_prerogative_liketimes"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp15"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13_text_size"
        android:textColor="@color/text_black_333"
        android:layout_gravity="center_horizontal"
        android:text="经常手快滑错了？"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12_text_size"
        android:textColor="@color/text_black_999"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:text="用反悔轻松找回一个人，让你拥有多次机会获取会员不限量"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp10"
        android:src="@mipmap/my_prerogative_point_five"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp30"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tvPayLikes"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/red_my_button"
        android:text="￥9.9获取VIP会员"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/dp15"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        />

</LinearLayout>
